<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Question count:"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@drawable/tv_frame"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView_question_count"/>

    <LinearLayout
            android:id="@+id/rv_questionCount"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:gravity="center"
                android:background="@drawable/tv_frame"
                android:textSize="32sp"
                android:layout_marginRight="10dp"
                android:id="@+id/fiveQuestion"
                android:text="5"
                android:layout_width="90dp"
                android:layout_height="404dp"
        />
        <TextView
                android:gravity="center"
                android:textSize="32sp"
                android:background="@drawable/tv_frame"
                android:layout_marginRight="10dp"
                android:id="@+id/tenQuestion"
                android:text="10"
                android:layout_width="90dp"
                android:layout_height="404dp"
        />
        <TextView
                android:gravity="center"
                android:textSize="32sp"
                android:background="@drawable/tv_frame"
                android:id="@+id/fifteenQuestion"
                android:layout_marginRight="10dp"
                android:text="15"
                android:layout_width="90dp"
                android:layout_height="404dp"
        />
        <TextView
                android:gravity="center"
                android:textSize="32sp"
                android:background="@drawable/tv_frame"
                android:id="@+id/twentyQuestion"
                android:text="20"
                android:layout_marginRight="10dp"
                android:layout_width="90dp"
                android:layout_height="404dp"
        />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>


